rapper soma(x bar, y bar) bar {
    rehearse x + y
}

rapper read() bar {
    rehearse barsize()
}


rapper concat(a verse, b verse) verse {
    rehearse a . b
}

rapper main() bar {
    rhyme x_1 bar
    x_1 = soma(read()-1, 1)
    soma(2, 1)

    rap(x_1)

    lyrical (x_1 > 1 && !!!(x_1 < 1)) || x_1 == 3 {
        x_1 = 2
    } 

    rhyme x bar = 3+6/3   *  2 -+-  +  2*4/2 + 0/1 -((6+ ((4)))/(2)) // Teste // Teste 2
    rhyme y_1 bar = 3
    y_1 = soma(y_1, x_1)
    rhyme z__ bar
    z__ = soma(x, y_1)

    lyrical x_1 == 2 {
        x_1 = 2
    }

    lyrical x_1 == 3 {
        x_1 = 2
    } beat {
        x_1 = 3
    }

    flow x_1 = 0; x_1 < 1 || x == 2; x_1 = soma(x_1, 1) {
        rap(x_1)
    } 



    // Saida final
    rap(x_1)
    rap(x)
    rap(z__+1)

    // All bool and int operations
    rhyme y bar = 2
    rhyme z bar
    z = (y == 2)
    rap(y+z)
    rap(y-z)
    rap(y*z)
    rap(y/z)
    rap(y == z)
    rap(y < z)
    rap(y > z)

    // All str operations 
    rhyme a verse 
    rhyme b verse

    x_1 = 1 
    y = 1 
    z = 2
    a = "abc"
    b = "def"
    rap(concat(a."",b.""))
    rap(a.x_1)
    rap(x_1.a)
    rap(y.z)
    rap(a.(x_1==1))
    rap(a == a)
    rap(a < b)
    rap(a > b)
}